class Solution {
    public int orangesRotting(int[][] grid) {
        int[] p1 = {1, -1, 0, 0}, p2 = {0, 0, 1, -1};
        Deque<int[]> queue = new ArrayDeque<>();

        //æŠŠçƒ‚æ‰çš„æ©˜å­åŠ å…¥é˜Ÿåˆ—ï¼Œä½œä¸ºæ‰©æ•£çš„èµ·ç‚¹
        for(int i=0;i<grid.length;i++){
            for(int j=0;j<grid[0].length;j++){
                if(grid[i][j]==2){
                    queue.add(new int[] {i,j});
                }
            }
        }
        //ä»è…çƒ‚çš„æ©˜å­å¼€å§‹æ„ŸæŸ“ï¼Œå…¶å®å°±æ˜¯ä¸€ä¸ªbfsæ±‚æ— æƒå›¾æœ€çŸ­è·¯çš„é—®é¢˜
        int steps=0;
        while(!queue.isEmpty()){
            int size=queue.size();
            for(int i=0;i<size;i++){ 
                int[] temp = queue.poll();
                for (int j = 0; j < p1.length; j++){
                    int x=temp[0]+p1[j];
                    int y=temp[1]+p2[j];
                    if(x>=0&&y>=0&&x<grid.length&&y<grid[0].length&&grid[x][y]==1){
                        grid[x][y]=2;
                        queue.offer(new int[] {x, y});
                    }
                }   
            }
            if (!queue.isEmpty()) steps++;
        }

        //éå†çŸ©é˜µï¼Œåˆ¤æ–­æ˜¯å¦æœ‰ğŸŠè¿˜æœªè¢«æ„ŸæŸ“ï¼Œä¹Ÿå°±æ˜¯æ˜¯å¦è¿˜æœ‰grid[i][j] = 1çš„åœ°å„¿
        for (int i = 0; i < grid.length; i++) {
            for (int j = 0; j < grid[0].length; j++) {
                if (grid[i][j] == 1) {
                    return -1;
                }
            }
        }
        return steps;

    }
}
